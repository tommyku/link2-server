#!/usr/bin/env sh
# $0 is a script name,
# $1, $2, $3 etc are passed arguments
# $1 is our command
CMD=$1

case "$CMD" in
  'run' )
    (bundle check || bundle install) && bundle exec ruby server.rb
    ;;

  'dev' )
    (bundle check || bundle install) && rerun -b -- 'bundle exec ruby server.rb'
    ;;

   * )
    # Run custom command. Thanks to this line we can still use
    # "docker run our_image /bin/bash" and it will work
    exec "$@"
    ;;
esac
